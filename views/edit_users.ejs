<%- include('layout/footer') %>
<div class="container">
   <div class="row">
     <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-success">
             <h3 class="text-light">Editar Jogador (<%= user.nome %> )</h3>
          </div>
          <div class="card-body p-4">
             <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nome">Nome</label>
                  <input type="text" name="nome" value = "<%= user.nome %> "  class="form-control form-control-lg"  placeholder="Nome do Jogador" required />
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" name="email" value = "<%= user.email %> " class="form-control form-control-lg"  placeholder="Email ou telefone" required />
                </div>
                 
                <div class="mb-3">
                    <label for="Telefone">Idade</label>
                    <input type="tel" name="Telefone" value = "<%= user.Telefone %> " class="form-control form-control-lg"  placeholder="Idade do Jogador" required />
                </div>


                <div class="mb-3">
                  <label for="posicao">Posição</label>
                  <input type="tel" name="posicao" value = "<%= user.posicao %>" class="form-control form-control-lg"  placeholder="Insira a posição" required />
                </div>
               
                <div class="mb-3 d-grid">
                  <input type="submit" name="submit" value = "Cadastrar" class="btn btn-primary btn-lg" />
                </div>
              </div>

             </form>
          </div>
        </div>
     </div>
   </div>
</div>